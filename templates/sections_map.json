  "style_variants": {
    "professional": {
      "bullet_style": "•",
      "heading_format": "ALL_CAPS",
      "emphasis": "**bold**"
    },
    "modern": {
      "bullet_style": "→",
      "heading_format": "Title_Case",
      "emphasis": "*italic*"
    },
    "classic": {
      "bullet_style": "-",
      "heading_format": "ALL_CAPS",
      "emphasis": "**BOLD**"
    }
  },
  
  "template_sections": {
    "minimal": ["contact", "summary", "experience", "skills", "education"],
    "standard": ["contact", "summary", "skills", "experience", "education", "certifications"],
    "comprehensive": ["contact", "summary", "skills", "experience", "projects", "education", "certifications", "achievements"]
  },
  
  "formatting_rules": {
    "contact_formats": {
      "horizontal": "email • phone • location • linkedin",
      "vertical": "email\nphone\nlocation\nlinkedin",
      "block": "Email: email\nPhone: phone\nLocation: location\nLinkedIn: linkedin"
    },
    "date_formats": {
      "MM/YYYY - MM/YYYY": "01/2020 - 12/2023",
      "Mon YYYY - Mon YYYY": "Jan 2020 - Dec 2023", 
      "YYYY-YYYY": "2020-2023",
      "MM.YYYY - MM.YYYY": "01.2020 - 12.2023"
    },
    "bullet_styles": {
      "•": "round bullet",
      "○": "hollow bullet", 
      "→": "arrow",
      "-": "dash",
      "*": "asterisk",
      "▪": "square bullet"
    }
  }
}